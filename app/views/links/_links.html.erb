  <thead>
        <tr>
            <th><%= sortable "link_url"%></th>
            <th><%= sortable "subject"%></th>
            <th><%= sortable "tags"%></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @links.each do |link| %>
      <tr>
        <td><%= link.link_url %></td>
        <td><%= link.subject %></td>
        <td><%= raw(link.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
    </tbody>
   
       <%= hidden_field_tag :direction, params[:direction] %>
       <%= hidden_field_tag :sort, params[:sort] %>


